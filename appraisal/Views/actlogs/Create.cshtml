@model appraisal.Models.actlog

@{
    ViewBag.Title = "新增";
}

<h2>新增</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>使用紀錄</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.App, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.App)
                @Html.ValidationMessageFor(model => model.App)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pepo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pepo)
                @Html.ValidationMessageFor(model => model.Pepo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Act, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Act, new { @style = "width:400px" })
                @Html.ValidationMessageFor(model => model.Act)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ext, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Ext, new { @style = "width:400px" })
                @Html.ValidationMessageFor(model => model.Ext)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tm, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Tm, new { @style = "width:400px" })
                @Html.ValidationMessageFor(model => model.Tm)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回使用紀錄清單", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
